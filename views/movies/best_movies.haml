.container
  .pure-g-r
    .pure-u-1-1
      .buttons-centered
        %a{:href => "/movies/best_movies"}
          %button.button-success.pure-button Best Movies
        %a{:href => "/movies/worst_movies"}
          %button.button-error.pure-button Worst Movies
        %a{:href => "/movies/newbies"}
          %button.button-secondary.pure-button Newbies
        %a{:href => "/movies/newbies"}
          %button.button-warning.pure-button Oldies
      %table.pure-table.table-centered
        %thead
          %tr
            %th Title
            %th Year
            %th Rating
            %th Genre
            %th Studio
        %tbody
        - @all_movies.each do |movie|
          %tr
            %td= "<a href='/movies/#{movie['id']}'>#{movie['title']}</a>"
            %td= movie["year"]
            - if movie["rating"] != nil
              %td= movie["rating"]
            - else
              %td NA
            %td= movie["genre"]
            %td= movie["studio"]
      %ul.pure-paginator.centered_pagination
        - if @page != 1
          %li= "<a class='pure-button' href='/movies/best_movies?page=#{@page - 1}'>&#171; Previous Page</a>"
        %li= "<a class='pure-button' href='/movies/best_movies?page=#{@page + 1}'>Next Page &#187;</a>"
      - if @page == 1
        %p.centered_pagination Some movies haven't been rated...movies with ratings of 100 start on page 10:
        %p.centered_pagination= "<a class='pure-button' href='/movies/best_movies?page=10'>10</a>"
      %p.centered_pagination= @page



